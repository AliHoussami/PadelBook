@{
    ViewData["Title"] = "Admin Dashboard | Padel Booking";
}

<style>
    .admin-container {
        display: flex;
        min-height: calc(100vh - 140px); /* Account for navbar and footer */
    }

    .sidebar {
        width: 250px;
        background-color: var(--primary-color);
        color: white;
        padding: 2rem 1rem;
        position: fixed;
        height: calc(100vh - 72px); /* Account for navbar */
        overflow-y: auto;
    }

    .sidebar-header {
        padding-bottom: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sidebar a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        display: block;
        padding: 0.75rem 1rem;
        margin: 0.25rem 0;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .sidebar a:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

    .main-content {
        flex: 1;
        margin-left: 250px;
        padding: 2rem;
    }

    .stats-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .stats-card .card-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            border-radius: 12px 12px 0 0;
            font-weight: 600;
        }

        .stats-card .card-body {
            padding: 1.5rem;
        }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--primary-color);
        text-align: center;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        margin-top: 2rem;
    }

        .table-container h4 {
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .custom-table th {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            font-weight: 500;
        }

        .custom-table td {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .custom-table tr:last-child td {
            border-bottom: none;
        }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        text-align: center;
    }

    .status-confirmed {
        background-color: #d4edda;
        color: #155724;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    @@media (max-width: 768px) {
        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
        }

        .main-content {
            margin-left: 0;
        }

        .admin-container {
            flex-direction: column;
        }
    }
</style>

<div class="admin-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h5 class="mb-0">Admin Menu</h5>
        </div>
        <a href="/Admin/Dashboard" class="active">
            <i class="fas fa-chart-line pe-2"></i>Dashboard
        </a>
        <a href="/Admin/ManageCourts">
            <i class="fas fa-table-tennis pe-2"></i>Manage Courts
        </a>
        <a href="/Admin/ManageBookings">
            <i class="fas fa-calendar-alt pe-2"></i>Manage Bookings
        </a>
        <a href="/Admin/ManageUsers">
            <i class="fas fa-users pe-2"></i>Manage Users
        </a>
        <a href="/Account/Logout">
            <i class="fas fa-sign-out-alt pe-2"></i>Logout
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2 class="text-center mb-4">Admin Dashboard</h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="card-header">
                        <i class="fas fa-table-tennis pe-2"></i>Total Courts
                    </div>
                    <div class="card-body">
                        <div class="stats-number">@ViewBag.TotalCourts</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stats-card">
                    <div class="card-header">
                        <i class="fas fa-users pe-2"></i>Total Users
                    </div>
                    <div class="card-body">
                        <div class="stats-number">@ViewBag.TotalUsers</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stats-card">
                    <div class="card-header">
                        <i class="fas fa-calendar-check pe-2"></i>Total Bookings
                    </div>
                    <div class="card-body">
                        <div class="stats-number">@ViewBag.TotalBookings</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <h4><i class="fas fa-clock pe-2"></i>Recent Bookings</h4>
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>User</th>
                            <th>Court</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in ViewBag.RecentBookings)
                        {
                            <tr>
                                <td>@booking.Id</td>
                                <td>@booking.User?.FullName</td>
                                <td>@booking.Court?.Name</td>
                                <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="status-badge @(booking.Status.ToLower() == "confirmed" ? "status-confirmed" : "status-pending")">
                                        @booking.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
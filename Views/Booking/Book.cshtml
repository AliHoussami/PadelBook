<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book a Court</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Padel Booking</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login?returnUrl=/Booking/Book?courtId=@Model.CourtId">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Book a Court</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @if (Context.Session.GetString("UserId") == null)
        {
            <div class="alert alert-warning text-center">Please <a href="/Account/Login?returnUrl=/Booking/Book?courtId=@Model.CourtId">login</a> to book a court.</div>
        }
        else
        {
            <form method="post" action="/Booking/Book" class="shadow-lg p-4 bg-light rounded">
                <input type="hidden" name="courtId" value="@Model.CourtId" />

                <div class="mb-3">
                    <label class="form-label">Court Name:</label>
                    <input type="text" name="courtName" value="@Model.Court.Name" readonly class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Available Courts:</label>
                    <input type="number" name="availableCourts" value="@ViewBag.AvailableCourts" readonly class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Date:</label>
                    <input type="date" name="date" required class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Start Time:</label>
                    <input type="time" name="startTime" required class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">End Time:</label>
                    <input type="time" name="endTime" required class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Confirm Booking</button>
            </form>
        }
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <p>&copy; 2024 Padel Court Booking. All rights reserved.</p>
    </footer>
</body>
</html>
